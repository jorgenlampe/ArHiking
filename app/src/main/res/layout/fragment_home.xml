<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:id="@+id/constraintLayoutHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clickToStartButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:backgroundTint="@color/app_theme_color"
                android:text="@string/start_hike_button"
                app:icon="@drawable/ic_hiking"
                app:iconGravity="start" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBrowseLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_3sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="@color/app_theme_color">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/browse_library_img">

                    <TextView
                        android:id="@+id/browseLibraryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:background="@color/white"
                        android:text="@string/browse_hike_library"
                        android:textAlignment="center"
                        android:textSize="@dimen/_18ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="-16dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/latestHikesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_hikes"
                android:paddingStart="@dimen/_15sdp"
                android:background="@color/app_theme_color"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintTop_toBottomOf="@id/cardBrowseLibrary" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/hikesViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                app:layout_constraintTop_toBottomOf="@id/latestHikesTextView"
                app:layout_constraintBottom_toTopOf="@id/cardMapView" />

            <TextView
                android:id="@+id/dividerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20ssp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@color/app_theme_color"
                app:layout_constraintTop_toBottomOf="@id/hikesViewPager" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/dividerTextView"
                app:cardBackgroundColor="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/map_placeholder">

                    <TextView
                        android:id="@+id/planTripTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@color/white"
                        android:text="@string/create_new_hike"
                        android:textAlignment="center"
                        android:textSize="@dimen/_18ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="-16dp" />

                    <TextView
                        android:id="@+id/planTripTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@color/white"
                        android:text="This is optional implementation"
                        android:textAlignment="center"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintTop_toBottomOf="@id/planTripTextView"
                        tools:layout_editor_absoluteX="-16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>